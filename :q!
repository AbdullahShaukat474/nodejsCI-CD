services:
  nginx:
    image: nginx:alpine
    volumes:
      - ./nginx/default.conf:/etc/nginx/conf.d/default.conf
    ports: 
      - "80:80"
    depends_on:
      - devop_blue
      - devop_green
    restart: always

  devop_blue:
    image:   abdullahshaukat474/devops:blue
    restart: always
  
  devop_green:
    image: abdullahshaukat474/devop:green
    restart: always
